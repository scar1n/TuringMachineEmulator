<UserControl x:Class="TuringMachineEmulator.UserControls.MachineCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TuringMachineEmulator.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label FontSize="23" Content="{Binding Number}" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name ="number"/>
            <TextBox FontSize="30" TextWrapping="Wrap" Text="{Binding CellValue}" HorizontalAlignment="Center" MaxLength="1" x:Name ="cellValue" TextChanged="cellValue_TextChanged" Margin="4,0,4,0"/>
        </StackPanel>
    </Grid>
</UserControl>
